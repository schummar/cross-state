{
  "name": "cross-state",
  "version": "1.0.0",
  "description": "(React) state library",
  "license": "ISC",
  "repository": "schummar/schummar-state",
  "author": {
    "name": "Marco Schumacher",
    "email": "marco@schumacher.dev"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "react.js",
    "react.d.ts"
  ],
  "main": "dist/cjs/index.cjs",
  "module": "dist/es/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es/index.mjs",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/es/index.mjs"
    },
    "./react": {
      "import": "./dist/es/react.mjs",
      "require": "./dist/cjs/react.cjs",
      "default": "./dist/es/react.mjs"
    },
    "./immer": {
      "import": "./dist/es/immer.mjs",
      "require": "./dist/cjs/immer.cjs",
      "default": "./dist/es/immer.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/index.d.ts"
      ],
      "react": [
        "dist/types/react/index.d.ts"
      ],
      "immer": [
        "dist/types/immer/index.d.ts"
      ]
    }
  },
  "scripts": {
    "start": "tsc --watch",
    "build": "runp -k build:clean :p build:compile:*",
    "build:clean": "rimraf dist",
    "build:compile:js": "vite build",
    "build:compile:types": "tsc && tsc-alias",
    "lint": "runp lint:*",
    "lint:eslint": "lint",
    "lint:tsc": "tsc --noEmit --emitDeclarationOnly false",
    "lint:tsc:tests": "tsc --noEmit --emitDeclarationOnly false -p test/tsconfig.json",
    "size": "size-limit",
    "prepublishOnly": "runp lint test build :s size",
    "test": "pnpm test:watch run --coverage",
    "test:watch": "node --expose-gc node_modules/vitest/vitest.mjs",
    "test:export": "pnpm test:watch run --coverage --reporter=verbose --reporter=junit --outputFile=test/testResults.xml"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0",
    "immer": ">=9.0.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "immer": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@schummar/eslint-config": "github:schummar/eslint-config",
    "@schummar/prettier-config": "github:schummar/prettier-config",
    "@schummar/runp": "1.9.3",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@testing-library/react": "14.0.0",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/seedrandom": "3.0.5",
    "@types/use-sync-external-store": "0.0.3",
    "@vitejs/plugin-react": "3.1.0",
    "@vitest/coverage-c8": "0.29.2",
    "eslint": "8.35.0",
    "fast-equals": "4.0.3",
    "happy-dom": "8.9.0",
    "immer": "9.0.19",
    "jsdom": "21.1.0",
    "prettier": "2.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "4.1.2",
    "seedrandom": "3.0.5",
    "semantic-release": "20.1.1",
    "size-limit": "^8.2.4",
    "tsc-alias": "1.8.2",
    "typescript": "4.9.5",
    "use-sync-external-store": "1.2.0",
    "vite": "4.1.4",
    "vite-tsconfig-paths": "4.0.5",
    "vitest": "0.29.2"
  },
  "volta": {
    "node": "18.13.0",
    "pnpm": "7.28.0"
  },
  "eslintConfig": {
    "extends": [
      "@schummar/eslint-config"
    ]
  },
  "prettier": "@schummar/prettier-config",
  "size-limit": [
    {
      "name": "core",
      "path": "dist/es/index.mjs",
      "limit": "5 KB"
    },
    {
      "name": "core: Store",
      "path": "dist/es/index.mjs",
      "import": "{createStore}",
      "limit": "3.5 KB"
    },
    {
      "name": "core: Cache",
      "path": "dist/es/index.mjs",
      "import": "{createCache}",
      "limit": "5 KB"
    },
    {
      "name": "core: InstanceCache",
      "path": "dist/es/index.mjs",
      "import": "{InstanceCache}",
      "limit": "600 B"
    },
    {
      "name": "core: calcDuration",
      "path": "dist/es/index.mjs",
      "import": "{calcDuration}",
      "limit": "100 B"
    },
    {
      "name": "/react",
      "path": "dist/es/react.mjs",
      "limit": "5 KB"
    },
    {
      "name": "/immer",
      "path": "dist/es/immer.mjs",
      "limit": "250 B"
    }
  ]
}
