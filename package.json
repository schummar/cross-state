{
  "name": "cross-state",
  "version": "1.0.0",
  "description": "(React) state library",
  "license": "ISC",
  "repository": "schummar/cross-state",
  "author": {
    "name": "Marco Schumacher",
    "email": "marco@schumacher.dev"
  },
  "type": "module",
  "sideEffects": [
    "dist/react/register.js",
    "dist/react/register.cjs",
    "dist/mutative/register.js",
    "dist/mutative/register.cjs",
    "dist/patches/register.js",
    "dist/patches/register.cjs",
    "dist/persist/register.js",
    "dist/persist/register.cjs"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./mutative": {
      "import": "./dist/mutative/index.js",
      "require": "./dist/mutative/index.cjs"
    },
    "./mutative/register": {
      "import": "./dist/mutative/register.js",
      "require": "./dist/mutative/register.cjs"
    },
    "./patches": {
      "import": "./dist/patches/index.js",
      "require": "./dist/patches/index.cjs"
    },
    "./patches/register": {
      "import": "./dist/patches/register.js",
      "require": "./dist/patches/register.cjs"
    },
    "./persist/register": {
      "import": "./dist/persist/register.js",
      "require": "./dist/persist/register.cjs"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./react/register": {
      "import": "./dist/react/register.js",
      "require": "./dist/react/register.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "tsdown --watch",
    "build": "tsdown",
    "lint": "runp -i lint:*",
    "lint:prettier": "prettier -l src",
    "lint:oxlint": "oxlint",
    "lint:tsc": "tsc --noEmit --emitDeclarationOnly false",
    "lint:tsc:tests": "tsc --noEmit --emitDeclarationOnly false -p test/tsconfig.json",
    "size": "size-limit",
    "prepublishOnly": "runp -i lint test build :p size publint",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:export": "pnpm test:watch run --coverage --reporter=verbose --reporter=junit --outputFile=test/testResults.xml"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0",
    "mutative": ">=1.0.3",
    "react": ">=16.8.0",
    "use-sync-external-store": "1.5.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "mutative": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "use-sync-external-store": {
      "optional": true
    }
  },
  "devDependencies": {
    "@emotion/styled": "11.14.1",
    "@mantine/core": "8.2.8",
    "@mantine/hooks": "^8.2.8",
    "@mui/material": "7.3.1",
    "@schummar/prettier-config": "github:schummar/prettier-config",
    "@schummar/runp": "2.2.2",
    "@size-limit/preset-small-lib": "11.2.0",
    "@testing-library/react": "16.3.0",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@types/seedrandom": "3.0.8",
    "@types/use-sync-external-store": "1.5.0",
    "@types/ws": "8.18.1",
    "@vitejs/plugin-react": "5.0.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "0.25.9",
    "happy-dom": "18.0.1",
    "jsdom": "26.1.0",
    "mutative": "^1.2.0",
    "oxlint": "^1.14.0",
    "prettier": "3.6.2",
    "publint": "0.3.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "6.0.1",
    "seedrandom": "3.0.5",
    "semantic-release": "24.2.7",
    "size-limit": "11.2.0",
    "tsdown": "^0.14.2",
    "typescript": "5.9.2",
    "use-sync-external-store": "^1.5.0",
    "vite": "7.1.4",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "volta": {
    "node": "22.13.1",
    "pnpm": "10.2.1"
  },
  "prettier": "@schummar/prettier-config",
  "size-limit": [
    {
      "name": "core",
      "path": "dist/index.js",
      "limit": "8.2 KB"
    },
    {
      "name": "core: Store",
      "path": "dist/index.js",
      "import": "{createStore}",
      "limit": "4 KB"
    },
    {
      "name": "core: Cache",
      "path": "dist/index.js",
      "import": "{createCache}",
      "limit": "5.5 KB"
    },
    {
      "name": "core: Persist",
      "path": "dist/index.js",
      "import": "{persist}",
      "limit": "3.5 KB"
    },
    {
      "name": "core: InstanceCache",
      "path": "dist/index.js",
      "import": "{InstanceCache}",
      "limit": "610 B"
    },
    {
      "name": "core: calcDuration",
      "path": "dist/index.js",
      "import": "{calcDuration}",
      "limit": "100 B"
    },
    {
      "name": "react",
      "path": "dist/react/index.js",
      "limit": "12 KB"
    },
    {
      "name": "react: useStore",
      "path": "dist/react/index.js",
      "import": "{useStore}",
      "limit": "6 KB"
    },
    {
      "name": "react: useCache",
      "path": "dist/react/index.js",
      "import": "{useCache}",
      "limit": "6 KB"
    },
    {
      "name": "react: useUrlParam",
      "path": "dist/react/index.js",
      "import": "{useUrlParam}",
      "limit": "1.2 KB"
    },
    {
      "name": "/mutative",
      "path": "dist/mutative/index.js",
      "limit": "250 B"
    },
    {
      "name": "/patches",
      "path": "dist/patches/index.js",
      "limit": "2 KB"
    },
    {
      "name": "empty",
      "path": "dist/index.js",
      "import": "{}",
      "limit": "0"
    }
  ]
}