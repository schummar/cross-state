{
  "name": "schummar-state",
  "repository": "schummar/schummar-state",
  "version": "0.2.1",
  "description": "(React) state library",
  "type": "module",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./react": {
      "import": "./dist/esm/react/index.js",
      "require": "./dist/cjs/react/index.js",
      "default": "./dist/esm/react/index.js"
    }
  },
  "author": {
    "name": "Marco Schumacher",
    "email": "marco@schumacher.dev"
  },
  "license": "ISC",
  "scripts": {
    "start": "tsc --watch",
    "build": "npm-run-all -s build:clean -p build:compile:*",
    "build:clean": "rimraf dist/**",
    "build:compile:esm": "tsc",
    "build:compile:cjs": "tsc -p tsconfig-cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "use-sync-external-store": "^1.0.0-rc.0"
  },
  "devDependencies": {
    "@testing-library/react": "^13.0.0-alpha.5",
    "@types/node": "^17.0.0",
    "@types/node-persist": "^3.1.2",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/use-sync-external-store": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "immer": "^9.0.7",
    "jest": "^27.4.5",
    "localforage": "^1.10.0",
    "node-persist": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "react": "^18.0.0-rc.0",
    "react-dom": "^18.0.0-rc.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "@types/react": ">=16.0.8",
    "immer": "^9.0.1",
    "react": ">=16.0.8"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "react.d.ts",
    "react.js"
  ]
}
