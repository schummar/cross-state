{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,

    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "target": "ES2015",
    "lib": ["ES2017", "DOM"],
    "allowJs": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "types": ["react/next", "react-dom/next"]
  },
  "include": ["src"]
}
